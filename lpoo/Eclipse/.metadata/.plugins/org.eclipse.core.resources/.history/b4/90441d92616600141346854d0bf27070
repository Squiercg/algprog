package Main;

import java.io.File;
import java.util.ArrayList;

import dao.*;

public class Teste {

	public static void main(String[] args) {
		
		try{
			String caminho;
			File file = new File("trabalho.sqlite");
			caminho = file.getAbsolutePath().replaceAll("trabalho.sqlite", "/TrabalhoLpoo/db/trabalho.sqlite").replaceAll("\\\\", "/");
			
			System.out.println(caminho);
			GenericDao dao = new GenericDao(caminho,"Corredor");
			ArrayList<String> teste = dao.all();
			System.out.println(teste);
		}catch(Exception e){
			System.out.println("Caught IOException: " + e.getMessage());						
		}		
		
		System.out.println("Hello World!");
	}

}
